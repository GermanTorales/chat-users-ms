{
  "moduleDirectories": [
    "node_modules"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "modulePaths": [
    "<rootDir>/src"
  ],
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "collectCoverage": true,
  "moduleNameMapper": {
    "^@application(.*)$": "<rootDir>/src/application$1",
    "^@domain(.*)$": "<rootDir>/src/domain$1",
    "^@infraestructure(.*)$": "<rootDir>/src/infraestructure$1"
  }
}